<h1>Listando mapas</h1>

<table>
  <tr>
    <th>Nome</th>
    <th>Longitude</th>
    <th>Latitude</th>
  </tr>

<% @mapas.each do |mapa| %>
  <tr>
    <td><%=h mapa.nome %></td>
    <td><%=h mapa.longitude %></td>
    <td><%=h mapa.latitude %></td>
    <td><%= link_to 'Show', mapa %></td>
    <td><%= link_to 'Edit', edit_mapa_path(mapa) %></td>
    <td><%= link_to 'Destroy', mapa, :confirm => 'Are you sure?', :method => :delete %></td> 
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New mapa', new_mapa_path %>
