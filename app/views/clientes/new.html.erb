<h1>New cliente</h1>

<% form_for(@cliente) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :nome %><br />
    <%= f.text_field :nome %>
  </p>
  <p>
    <%= f.label :idade %><br />
    <%= f.text_field :idade %>
  </p>
  <p>
    <%= f.label :endereco %><br />
    <%= f.text_field :endereco %>
  </p>
  <p>
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label :senha %><br />
    <%= f.text_field :senha %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<script src="http://api.mygeoposition.com/api/geopicker/api.js" type="text/javascript"></script>
<script type="text/javascript">
  function lookupGeoData() { 
    myGeoPositionGeoPicker({
      startAddress     : 'White House, Washington',
      returnFieldMap   : {
      'demoField1' : '<LAT>',
      'demoField2' : '<LNG>',
      'demoField3' : '<STREETNUMBER> <STREET>, <CITY>, <STATE> <ZIP>, <COUNTRY>'
      }
    });
  }
</script>
<input name="demoField1" id="demoField1" size="10" type="text">
<input name="demoField2" id="demoField2" size="10" type="text">
<input name="demoField3" id="demoField3" size="50" type="text">
<button type="button" onclick="lookupGeoData();">GeoPicker</button>

<%= link_to 'Back', clientes_path %>
